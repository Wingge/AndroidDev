<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

  <LinearLayout
      android:id="@+id/scroll_layout"
      android:background="@color/c"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:orientation="vertical"
      >
    <Button
        android:id="@+id/btn_scroll_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollTo"
        />
    <Button
        android:id="@+id/btn_scroll_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollBy"
        />
  </LinearLayout>


  <com.bobomee.blogdemos.scroll.OverScrollerView
      android:layout_width="match_parent"
      android:background="@color/a"
      android:layout_height="match_parent"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="This is first child view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="This is second child view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="This is third child view"/>

  </com.bobomee.blogdemos.scroll.OverScrollerView>


</LinearLayout>